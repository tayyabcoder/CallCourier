<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CallCourier</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <!-- Font Awesome for Navbar Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
</head>
<body class="min-h-screen flex flex-col bg-gray-100 text-gray-900">

    <!-- Header -->
    <header class="w-full bg-green-600">
        <div class="max-w-7xl mx-auto flex items-center justify-between px-4 py-3">
            <!-- Left: logo + title -->
            <div class="flex items-center gap-2">
                <img src="~/images/logo.png" alt="Logo" class="h-8 w-auto" />
                <div class="text-white whitespace-nowrap">
                    <span class="font-semibold">| GoGreen</span>
                    <span> (Courier Management System)</span>
                </div>
            </div>

            <!-- Right: search + profile -->
            <div class="flex items-center gap-3">
                <input type="text"
                       placeholder="Select Document …"
                       class="h-11 w-72 md:w-96 bg-white text-gray-800 placeholder-gray-500
                              border border-gray-300 rounded-md px-4 shadow-sm
                              focus:outline-none focus:ring-2 focus:ring-green-500 focus:shadow-md
                              hover:shadow-md transition" />
                <div class="flex items-center bg-green-500/20 rounded-full pl-1 pr-3 py-1">
                    <!-- Avatar: responsive + hover + initials from 'Tayyab' -->
                    <span class="flex h-8 w-8 md:h-9 md:w-9 items-center justify-center rounded-full
                      bg-black/40 text-white text-xs md:text-sm font-semibold
                      transition-transform duration-200 hover:scale-110
                      hover:ring-2 hover:ring-white/50
                      cursor-pointer select-none" aria-label="Open profile">
                        TA
                    </span>

                    <span class="ml-2 text-white text-sm font-medium">Tayyab</span>
                </div>
            </div>
        </div>
    </header>
    <!-- /Header -->
    <!-- ===== Nav Card + Green Strip (exact like original) ===== -->
    <section class="w-full">
        <div class="max-w-7xl mx-auto px-4">
            <!-- mt-3 removed here -->
            <div class="bg-white rounded-lg shadow md:rounded-xl md:shadow-md">
                <!-- Hidden heading for semantics (satisfies analyzer) -->
                <h2 id="nav-title" class="sr-only">Primary Navigation</h2>

                <!-- Navbar -->
                <nav class="w-full">
                    <div class="px-8">
                        <ul class="grid grid-cols-10 place-items-center text-slate-700">

                            <!-- &Define -->
                            <li>
                                <a class="group flex flex-col items-center py-4 px-2 cursor-pointer">
                                    <span class="flex h-8 w-8 items-center justify-center leading-none text-center">
                                        <i class="fa-solid fa-plus text-2xl transform transition-transform duration-200 group-hover:scale-110 group-hover:text-emerald-600"></i>
                                    </span>
                                    <span class="text-[13px] h-8 flex items-center justify-center text-center transition-colors duration-200 group-hover:text-emerald-600">&amp;Define</span>
                                </a>
                            </li>

                            <!-- &Transaction -->
                            <li>
                                <a class="group flex flex-col items-center py-4 px-2 cursor-pointer">
                                    <span class="flex h-8 w-8 items-center justify-center leading-none text-center">
                                        <i class="fa-solid fa-file-invoice text-2xl transform transition-transform duration-200 group-hover:scale-110 group-hover:text-emerald-600"></i>
                                    </span>
                                    <span class="text-[13px] h-8 flex items-center justify-center text-center transition-colors duration-200 group-hover:text-emerald-600">&amp;Transaction</span>
                                </a>
                            </li>

                            <!-- Inventory Reports -->
                            <li>
                                <a class="group flex flex-col items-center py-4 px-2 cursor-pointer">
                                    <span class="flex h-8 w-8 items-center justify-center leading-none text-center">
                                        <i class="fa-solid fa-chart-column text-2xl transform transition-transform duration-200 group-hover:scale-110 group-hover:text-emerald-600"></i>
                                    </span>
                                    <span class="text-[13px] h-8 flex items-center justify-center text-center transition-colors duration-200 group-hover:text-emerald-600">
                                        Inventory Reports
                                    </span>
                                </a>
                            </li>

                            <!-- HCM -->
                            <li>
                                <a class="group flex flex-col items-center py-4 px-2 cursor-pointer">
                                    <span class="flex h-8 w-8 items-center justify-center leading-none text-center">
                                        <i class="fa-solid fa-id-card text-2xl transform transition-transform duration-200 group-hover:scale-110 group-hover:text-emerald-600"></i>
                                    </span>
                                    <span class="text-[13px] h-8 flex items-center justify-center text-center transition-colors duration-200 group-hover:text-emerald-600">HCM</span>
                                </a>
                            </li>

                            <!-- WMS -->
                            <li>
                                <a class="group flex flex-col items-center py-4 px-2 cursor-pointer">
                                    <span class="flex h-8 w-8 items-center justify-center leading-none text-center">
                                        <i class="fa-solid fa-boxes-stacked text-2xl transform transition-transform duration-200 group-hover:scale-110 group-hover:text-emerald-600"></i>
                                    </span>
                                    <span class="text-[13px] h-8 flex items-center justify-center text-center transition-colors duration-200 group-hover:text-emerald-600">WMS</span>
                                </a>
                            </li>

                            <!-- گِلے شِکوے -->
                            <li dir="rtl">
                                <a class="group flex flex-col items-center py-4 px-2 cursor-pointer">
                                    <span class="flex h-8 w-8 items-center justify-center leading-none text-center">
                                        <i class="fa-solid fa-book text-2xl transform transition-transform duration-200 group-hover:scale-110 group-hover:text-emerald-600"></i>
                                    </span>
                                    <span class="text-[13px] h-8 flex items-center justify-center text-center transition-colors duration-200 group-hover:text-emerald-600">گِلے شِکوے</span>
                                </a>
                            </li>

                            <!-- COD Financials (Active) -->
                            <li>
                                <a class="group flex flex-col items-center py-4 px-2 text-emerald-600 font-semibold border-b-2 border-emerald-600 cursor-pointer">
                                    <span class="flex h-8 w-8 items-center justify-center leading-none text-center">
                                        <i class="fa-solid fa-sack-dollar text-2xl"></i>
                                    </span>
                                    <span class="text-[13px] h-8 flex items-center justify-center text-center">COD Financials</span>
                                </a>
                            </li>

                            <!-- CN Status -->
                            <li>
                                <a class="group flex flex-col items-center py-4 px-2 cursor-pointer">
                                    <span class="flex h-8 w-8 items-center justify-center leading-none text-center">
                                        <i class="fa-solid fa-circle-check text-2xl transform transition-transform duration-200 group-hover:scale-110 group-hover:text-emerald-600"></i>
                                    </span>
                                    <span class="text-[13px] h-8 flex items-center justify-center text-center transition-colors duration-200 group-hover:text-emerald-600">CN Status</span>
                                </a>
                            </li>

                            <!-- Operations -->
                            <li>
                                <a class="group flex flex-col items-center py-4 px-2 cursor-pointer">
                                    <span class="flex h-8 w-8 items-center justify-center leading-none text-center">
                                        <i class="fa-solid fa-mug-saucer text-2xl transform transition-transform duration-200 group-hover:scale-110 group-hover:text-emerald-600"></i>
                                    </span>
                                    <span class="text-[13px] h-8 flex items-center justify-center text-center transition-colors duration-200 group-hover:text-emerald-600">Operations</span>
                                </a>
                            </li>

                            <!-- Group Admin -->
                            <li>
                                <a class="group flex flex-col items-center py-4 px-2 cursor-pointer">
                                    <span class="flex h-8 w-8 items-center justify-center leading-none text-center">
                                        <i class="fa-solid fa-user-group text-2xl transform transition-transform duration-200 group-hover:scale-110 group-hover:text-emerald-600"></i>
                                    </span>
                                    <span class="text-[13px] h-8 flex items-center justify-center text-center transition-colors duration-200 group-hover:text-emerald-600">Group Admin</span>
                                </a>
                            </li>

                        </ul>
                    </div>
                </nav>

                <!-- Green Strip -->
                <div class="px-8 pb-3">
                    <div class="relative mt-2 rounded-md bg-emerald-600 text-white text-[12px] tracking-wide uppercase text-center py-2 shadow-sm">
                        SHIPMENT TAKING OVER
                        <span class="absolute right-2 top-1/2 -translate-y-1/2 inline-flex h-5 min-w-5 items-center justify-center rounded-full bg-white/20 px-2 text-xs">×</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /Nav Card + Green Strip -->

    <main class="flex-1">
        <div class="max-w-7xl mx-auto px-4 py-6">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-gray-100 border-t">
        <div class="max-w-7xl mx-auto px-4 py-4 text-center text-sm text-gray-600">
            &copy; @DateTime.UtcNow.Year - CallCourier
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
